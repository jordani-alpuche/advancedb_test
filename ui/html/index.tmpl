{{define "content"}}
<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Dashboard</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ul>
                </div>
                
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-body">
                        <div class="dash-count">
                            <div class="dash-counts">
                                <h4>{{.BrandCount}}</h4>
                                <h5>Total Brands</h5>
                            </div>
                            <div class="dash-imgs">
                                <i class="fas fa-tags"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-body">
                        <div class="dash-count das1">
                            <div class="dash-counts">
                                <h4>{{.CategoryCount}}</h4>
                                <h5>Total Categories</h5>
                            </div>
                            <div class="dash-imgs">
                                <i class="fas fa-list-alt"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-body">
                        <div class="dash-count das2">
                            <div class="dash-counts">
                                <h4>{{.ProductCount}}</h4>
                                <h5>Total Products Available</h5>
                            </div>
                            <div class="dash-imgs">
                                <i class="fas fa-box-open"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-body">
                        <div class="dash-count das3">
                            <div class="dash-counts">
                                <h4>{{.UserCount}}</h4>
                                <h5>Total Active Users</h5>
                            </div>
                            <div class="dash-imgs">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quick Insights</h5>
                        <p class="card-text">
                            Welcome to your application dashboard! Here's a quick overview of your key data.
                            Manage your brands, categories, and products efficiently using the links above.
                            Stay informed about your active user base.
                        </p>
                        <p class="card-text">
                            For detailed information and management of each section, please use the navigation sidebar.
                        </p>
                        <div class="mt-3">
                            <a href="/products" class="btn btn-outline-primary me-2">View All Products</a>
                            <a href="/brands" class="btn btn-outline-primary me-2">View All Brands</a>
                            <a href="/categories" class="btn btn-outline-primary">View All Categories</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-info-circle me-2"></i> System Information</h5>
                        <p class="card-text">
                            A detailed glance at some system-related information and your current user status.
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Application Version: 1.0.0</li>
                            <li class="list-group-item">Server Status: Online</li>
                            <li class="list-group-item">Database Connection: Active</li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{{end}}